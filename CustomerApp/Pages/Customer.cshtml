@page "{id}"
@using CustomerAPI.Models
@model CustomerModel
@{
    Customer customer = (Customer)ViewData["Customer"];
    ViewData["Title"] = customer.Name;
}

<h2>User</h2>

<form>
    <div>
        <label>Id</label>
        <input type="text" class="form-control" value="@customer.Id" readonly />

        <label>Name</label>
        <input type="text" class="form-control" value="@customer.Name" />

        <label>Email</label>
        <input type="text" class="form-control" value="@customer.Email" />
    </div>
</form>

<form asp-page-handler="Delete" asp-route-id="@customer.Id">
    <a class="btn btn-primary" href="/">Back</a>

    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
</form>
